@model IEnumerable<GamingStore_Projectoti2.Models.Jogos>

@{
    ViewBag.Title = "Index";
}

<center>
    <h2>Lista de Jogos</h2>
</center>


@using (Html.BeginForm("Index", "Lista", FormMethod.Get))
{

    <b> Pesquisa por...</b>

    @Html.RadioButton("SearchBy", "Jogo", true) <text>Nome</text>
    @Html.RadioButton("SearchBy", "Plataforma") <text>Plataforma</text>


    <br />
    @Html.TextBox("search")<input type="submit" value="Pesquisa" />
}





<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fotografia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plataforma)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)€
            </td>
            <td>
                @*Html.DisplayFor(modelItem => item.Fotografia)*@
                <a href="~/fotografias/@item.Fotografia" target="_blank">
                    <img src="~/fotografias/@item.Fotografia" width="50" height="37" />
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plataforma)
            </td>


            <td>
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Comprar", "", new { id = item.Id }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }
</table>
